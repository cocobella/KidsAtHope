@model TimeTraveler.Models.TimeTravelerDetail

@{
    ViewBag.Title = "Interests";
}

<div class="row">
    <div class="col-xs-12">
        <h1 class="contentTitle">Ready, Set, Think!!</h1>
    </div>
</div>

@using (Html.BeginForm("Interests", "Home", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12 col-xs-12">
        <p>
            Lets begin by thinking about what skills and talents you
            already have. Choose at least 5 – you can choose more of
            course!
        </p>
        <p style="margin-top: 25px;">
            <strong>I like:</strong>
        </p>
        <ul class="select-grid">
            <li>
                <input type="checkbox" id="cb1" value="Find humor" name="interest" />
                <label for="cb1">
                    <div class="select-grid-image">
                        <img src="/images/interests/laugh.jpg" />
                    </div>
                    <div class="select-grid-title">
                        To laugh
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb2" value="Art / Drawing" name="interest" />
                <label for="cb2">
                    <div class="select-grid-image">
                        <img src="/images/interests/drawing.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Art/Drawing
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb3" value="Computers" name="interest" />
                <label for="cb3">
                    <div class="select-grid-image">
                        <img src="/images/interests/computers.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Computers
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb4" value="Reading" name="interest" />
                <label for="cb4">
                    <div class="select-grid-image">
                        <img src="/images/interests/reading.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Reading
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb5" value="Help adults" name="interest" />
                <label for="cb5">
                    <div class="select-grid-image">
                        <img src="/images/interests/helping.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Helping grown ups
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb6" value="Help kids" name="interest" />
                <label for="cb6">
                    <div class="select-grid-image">
                        <img src="/images/interests/helpingKids.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Helping kids
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb7" value="Play sports" name="interest" />
                <label for="cb7">
                    <div class="select-grid-image">
                        <img src="/images/interests/sports.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Sports
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb8" value="Make others laugh" name="interest" />
                <label for="cb8">
                    <div class="select-grid-image">
                        <img src="/images/interests/makeOthersLaugh.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Make others laugh
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb9" value="Sing" name="interest" />
                <label for="cb9">
                    <div class="select-grid-image">
                        <img src="/images/interests/sing.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Singing
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb10" value="Math" name="interest" />
                <label for="cb10">
                    <div class="select-grid-image">
                        <img src="/images/interests/math.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Math
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb11" value="Making / Fixing things" name="interest" />
                <label for="cb11">
                    <div class="select-grid-image">
                        <img src="/images/interests/making.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Making or fixing things
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb12" value="Help around the house" name="interest" />
                <label for="cb12">
                    <div class="select-grid-image">
                        <img src="/images/interests/aroundTheHouse.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Help around the house
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb13" value="Help animals" name="interest" />
                <label for="cb13">
                    <div class="select-grid-image">
                        <img src="/images/interests/animals.jpg" />
                    </div>
                    <div class="select-grid-title" style="font-size: 15px;">
                        Help sick or abused animals
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb14" value="Help the elderly or homeless" name="interest" />
                <label for="cb14">
                    <div class="select-grid-image">
                        <img src="/images/interests/helpElderly.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Help elderly or homeless
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb15" value="Writing" name="interest" />
                <label for="cb15">
                    <div class="select-grid-image">
                        <img src="/images/interests/writing.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Writing
                    </div>
                </label>
            </li>
            <li>
                <input type="checkbox" id="cb16" value="Music" name="interest" />
                <label for="cb16">
                    <div class="select-grid-image">
                        <img src="/images/interests/music.jpg" />
                    </div>
                    <div class="select-grid-title">
                        Music
                    </div>
                </label>
            </li>
        </ul>

        <div class="pull-right" style="margin-top: 10px;">
            <button id="btnLetsGo" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#letsGoModal">Continue</button>
        </div>
        
        <!-- Modal HTML -->
        <div id="letsGoModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title">Wow!</h1>
                    </div>
                    <div class="modal-body">
                        <p>These talents and skills will help you in your future as an adult. We know that you have a
                        lot more than just the few we listed here. We just want to show you that even with just these skills
                        and talents you are already preparing for a successful future!</p>
                    </div>
                    <div class="modal-footer">
                        <button id="interestSubmit" type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Continue</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
}