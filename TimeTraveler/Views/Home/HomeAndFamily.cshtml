@{
	ViewBag.Title = "Home and Family";
}

<div class="container">
	<div class="page-header">
		<h2>Destination 1: Home and Family</h2>
	</div>
	<div class="row">


		<div class="col-md-12">
			Please select one of the options as to where you would like to live in the future?
		</div>
	</div>

    @using(Html.BeginForm("HomeAndFamily", "Home", FormMethod.Post))
    {
	<div class="row">
		<div class="col-md-12">
			<ul class="family" style="-webkit-padding-start: 10px;">
				<li>
					<input type="radio" name="whereLive" id="cb1" value="downtown"/>
					<label for="cb1">
						<span class="row">
							<img src="/images/home_and_family/downtown_house.png" />
						</span>
						<span class="row">
							Downtown
						</span>
					</label>
				</li>
				<li>
					<input type="radio" name="whereLive" id="cb2" value="mountain"/>

					<label for="cb2">
						<span class="row"><img src="/images/home_and_family/mountain_house.png" /></span><span class="row">Mountains</span>
					</label>
				</li>
				<li>
					<input type="radio" name="whereLive" id="cb3" value="ranch"/>
					<label for="cb3">
						<span class="row"><img src="/images/home_and_family/ranch_house.png" /></span>
						<span class="row">Ranch</span>
					</label>
				</li>
				<li>
					<input type="radio" name="whereLive" id="cb4" value="ocean"/>
					<label for="cb4">
						<span class="row">
							<img src="/images/home_and_family/sea_house.png" />
						</span>
						<span class="row">Sea</span>
					</label>
				</li>
				<li>
					<input type="radio" name="whereLive" id="cb5" value="snow"/>
					<label for="cb5">
						<span class="row">
							<img src="/images/home_and_family/snow_house.png" />
						</span>
						<span class="row">
							Snow
						</span>
					</label>
				</li>
				<li>

					<input type="radio" name="whereLive" id="cb6" value="suburb"/>
					<label for="cb6">
						<span class="row">
							<img src="/images/home_and_family/suburbs_house.png" />
						</span>
						<span class="row">
							City
						</span>

					</label>
				</li>

			</ul>

		</div>

        <div class="row">
            <div class="col-md-12 col-cs-12">
                <button id="btnGo">Next</button>
            </div>
        </div>
        }

	</div>
</div>