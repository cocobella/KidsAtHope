<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Time Traveler App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: black;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <a class="logo" href="/">
                    <font color="white">T</font><strong class="yellow">i</strong><font color="white">me</font>
                    <span><font class="traveler" color="white">traveler</font></span>
                </a>
            </div>
        </div>
    </div>
    <div class="backpiece">
        <div class="container">
            <div class="mainContent">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="container">
        <footer>
            <div class="row">
                <div class="col-xs-2">
                    <div id="img1"><img src="~/images/png/logo.png" alt="Kids At Hope" style="width: 100px;" /></div>
                </div>
                <div class="col-xs-10">
                    <div><small>Developed in partnership with the University of Arizona, Eller MIS Solutions Center</small></div>
                    <div><small>Kids at Hope &copy;2013</small></div>
                    <div><small><a href="#">Privacy Policy</a></small></div>
                    <div style="margin-top: 10px;"><a href="https://www.facebook.com/kidsathope"><img src="~/images/png/FB-f-Logo__blue_29.png" /></a></div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <link href='https://fonts.googleapis.com/css?family=Jura:400,600' rel='stylesheet' type='text/css'>
</body>
</html>
